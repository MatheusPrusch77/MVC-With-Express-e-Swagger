<!DOCTYPE html>
<html>
<head>
    <title>Lista de Usuários</title>
</head>
<body>
    <h1>Usuários Cadastrados</h1>
    <ul>
        <% usuarios.forEach(usuario => { %>
            <li><%= usuario.nome %> (<%= usuario.email %>) 
                <form action="/excluir/<%= usuario.email %>" method="POST" style="display:inline;">
                    <button type="submit">Excluir</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <a href="/cadastrar">Cadastrar Novo Usuário</a>
</body>
</html>
